<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<!-- Database Configuration -->
	<import resource="datasource.xml"/>
	
	<context:component-scan base-package="org.manalith.ircbot" />
	
	<bean id="manalithBot" class="org.manalith.ircbot.ManalithBot">
		<constructor-arg>
			<list>
				<ref bean="twitReaderPlugin" />
				<ref bean="distroPkgFinderPlugin" />
				<ref bean="weatherPlugin" />
				<ref bean="nvidiaDriverNewsPlugin" />
				<ref bean="calcPlugin" />
				<ref bean="kvlPlugin" />
				<ref bean="cerPlugin" />
				<ref bean="uriTitlePlugin" />
				<ref bean="dictionaryPlugin" />
				<ref bean="pingPlugin" />
			</list>
		</constructor-arg>
	</bean>
	<bean id="twitReaderPlugin" class="org.manalith.ircbot.plugin.twitreader.TwitReaderPlugin"></bean>
	<bean id="distroPkgFinderPlugin" class="org.manalith.ircbot.plugin.distropkgfinder.DistroPkgFinderPlugin"></bean>
	<bean id="weatherPlugin" class="org.manalith.ircbot.plugin.weather.WeatherPlugin"></bean>
	<bean id="nvidiaDriverNewsPlugin" class="org.manalith.ircbot.plugin.nvidiadrivernews.NvidiaDriverNewsPlugin"></bean>
	<bean id="calcPlugin" class="org.manalith.ircbot.plugin.calc.CalcPlugin"></bean>
	<bean id="kvlPlugin" class="org.manalith.ircbot.plugin.kvl.KVLPlugin"></bean>
	<bean id="cerPlugin" class="org.manalith.ircbot.plugin.cer2.CERPlugin"></bean>
	<bean id="uriTitlePlugin" class="org.manalith.ircbot.plugin.urititle.UriTitlePlugin"></bean>
	<bean id="pingPlugin" class="org.manalith.ircbot.plugin.ping.PingPlugin"></bean>
	<bean id="dictionaryPlugin" class="org.manalith.ircbot.plugin.dictionary.DictionaryPlugin"></bean>
</beans>
