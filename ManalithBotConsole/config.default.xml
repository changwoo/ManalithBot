<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="org.manalith.ircbot" />

	<bean id="accountService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl" value="rmi://localhost:1199/RemoteService" />
		<property name="serviceInterface" value="org.manalith.ircbot.remote.RemoteService" />
		<property name="remoteInvocationFactory">
			<ref bean="remoteInvocationFactory" />
		</property>
	</bean>

	<bean id="remoteInvocationFactory"
		class="org.springframework.security.remoting.rmi.ContextPropagatingRemoteInvocationFactory" />
</beans>
